<UserControl x:Class="MyPrintDemo.WPF.Elements.UserAuthorization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyPrintDemo.WPF.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Личный кабинет"
      FontSize="30"
Foreground="Aqua" Margin="0,30,0,350"
Height="50" Width="300" HorizontalContentAlignment="Center"/>
        <Label Content="e-mail" Margin="260,100,0,0" FontSize="14"
        Foreground="White"/>
        <TextBox x:Name="LoginAuthoriz" Width="280" Height="30"
          FontSize="24" Margin="0,0,0,150" Cursor="Pen"
          Background="Aqua" Padding="3,-2,3,3"/>
        <Label Content="Пароль" Margin="260,180,0,0" FontSize="14"
 Foreground="White"/>
        <TextBox x:Name="PasswordAuthoriz" Width="280" Height="30"
   FontSize="24" Margin="0,0,0,0" Cursor="Pen"
   Background="Aqua" Padding="3,-2,3,3"/>
    </Grid>
</UserControl>
